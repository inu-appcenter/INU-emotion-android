<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_activity_main">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_activity_main"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="3dp"
            android:outlineProvider="bounds"/>

        <!-- 프로필 -->

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="3dp"
            android:src="@drawable/img_temp_profile"/>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/image_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="홍길동" />

        <TextView
            android:id="@+id/text_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:textColor="#707070"
            android:text="정보기술대학 컴퓨터공학부"/>

        <!-- 메뉴 -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_emotion"
            android:layout_marginTop="42dp"
            android:paddingTop="96dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_main_btn"
            android:text="감정선택"
            android:textColor="#152F68"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/text_major"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_result"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_result"
            android:paddingTop="96dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_main_btn"
            android:text="현황"
            android:textColor="#152F68"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_select_emotion"
            app:layout_constraintStart_toEndOf="@+id/btn_select_emotion"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_betting_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/img_main_btn"
            android:paddingTop="96dp"
            android:text="베팅"
            android:textColor="#152F68"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/btn_emotion_graph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_select_emotion" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_emotion_graph"
            android:paddingTop="96dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_main_btn"
            android:text="그래프"
            android:textColor="#152F68"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_betting_emotion"
            app:layout_constraintStart_toEndOf="@+id/btn_betting_emotion"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>