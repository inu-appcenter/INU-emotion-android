<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mvvm.feature.main.MainActivity">
    
    <data>
        <variable
            name="main"
            type="com.inu.emotion.mvvm.feature.main.MainViewModel" />
    </data>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 프로필 -->
            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="96dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="3dp"
                android:src="@drawable/img_temp_profile"
                android:contentDescription="@string/img_profile"/>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/image_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="@{main.name}" />

            <TextView
                android:id="@+id/text_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/text_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp"
                android:textColor="#707070"
                android:text="@{main.major}"/>

            <!-- 메뉴 -->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_select_emotion"
                android:layout_marginTop="42dp"
                android:paddingTop="96dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_main_btn"
                android:text="@string/btn_select_emotion"
                android:textColor="#152F68"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/text_major"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_result"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_result"
                android:paddingTop="96dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_main_btn"
                android:text="@string/btn_current"
                android:textColor="#152F68"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/btn_select_emotion"
                app:layout_constraintStart_toEndOf="@+id/btn_select_emotion"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_betting_emotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/img_main_btn"
                android:paddingTop="96dp"
                android:text="@string/btn_betting"
                android:textColor="#152F68"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/btn_emotion_graph"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_select_emotion" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_emotion_graph"
                android:paddingTop="96dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_main_btn"
                android:text="@string/btn_graph"
                android:textColor="#152F68"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/btn_betting_emotion"
                app:layout_constraintStart_toEndOf="@+id/btn_betting_emotion"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- TODO : 리사이클러뷰로 버튼 변경 -->
            <!--androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_recyclerview"
                app:layout_constraintTop_toBottomOf="@id/text_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"/-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
