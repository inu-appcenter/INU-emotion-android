<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <!-- 프로필 -->

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/image_temp_profile"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/image_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#707070"
        android:text="홍길동" />

    <TextView
        android:id="@+id/text_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:textColor="#707070"
        android:text="정보기술대학 컴퓨터공학부"/>

    <!-- 메뉴 -->

    <TableLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_major">

        <TableRow>
            <Button
                android:id="@+id/btn_select_emotion"
                android:layout_marginStart="24dp"
                android:layout_width="168dp"
                android:layout_height="168dp"
                android:text="감정 선택"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#707070"/>
            <Button
                android:id="@+id/btn_emotion_state"
                android:layout_marginStart="24dp"
                android:layout_width="168dp"
                android:layout_height="168dp"
                android:text="현황"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#707070"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btn_betting_emotion"
                android:layout_marginStart="24dp"
                android:layout_width="168dp"
                android:layout_height="168dp"
                android:text="베팅"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#707070"/>
            <Button
                android:id="@+id/btn_emotion_graph"
                android:layout_marginStart="24dp"
                android:layout_width="168dp"
                android:layout_height="168dp"
                android:text="그래프"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#707070"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>